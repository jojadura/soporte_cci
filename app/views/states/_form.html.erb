<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<%  if form_title(@state) %>
					<h1>Crear Estado</h1>		
			<% end %>
			<% if @state.errors.any? %>
			  <div class="alert alert-danger">
			    <ul>
			    <% @state.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>			
			<% if signed_in? %>
				<%= form_for @state do |f| %>
					<div class="form-group">
						<%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingrese el nombre del Estado" %>
					</div>
				  	<div class="form-group">
				    	<%= f.label :order %><br>
				    	<%= f.number_field :order %>
				  	</div>  

					<div class="form-group">
					    <%= f.label :color %><br>
					    <%= f.color_field :color %>
					</div>
					<div>
						<%= f.submit "Crear Estado", class: "btn btn-primary btn-lg" %> <%= link_to "Cancelar", states_path, class: "btn btn-primary btn-lg" %>
					</div>	
				<% end %>
			<% end %>
		</div>
	</div>
</div>