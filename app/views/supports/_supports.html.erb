<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= paginate @supports %>
      <table class="table table-bordered" id="assistance">
        <thead>
          <tr>
            <th>No.</th>
            <th>Titulo</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Categoría/SubCategoría</th>
            <th>Prioridad</th>
            <th>Imagen</th>
            <th>Estado</th>
            <th>Acción</th>
          </tr>
        </thead>

        <tbody>
          <% @supports.each do |support| %>
            <tr  style="background-color:<%= support.state.color %>">
              <td><%= support.id %></td>        
              <td><%= link_to support.title, support %></td>        
              <td><%= support.created_at.strftime("%F") %></td>
              <td><%= support.created_at.strftime("%H:%M:%S") %></td>
              <!--<td><%= support.subCategory.category.title %></td>-->
              <td><%= support.subCategory.name %></td>
              <td><%= support.priority.name %></td>        
              <td><%= image_tag(support.screen.url(:thumb), size: "40X40") %></td>
              <td> <div style="background-color:<%= support.state.color %>"> <%= support.state.name %></div></td>
              <td><%= link_to 'Cerrar', close_support_path(support),remote: true,class: "boton_modal"  unless support.state.order==1 || support.state.order==4  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% 
=begin %>
       link_to "Ver detalles", supports_path,  id: "miboton",  remote: true %>
<%
=end%>

    </div> <!-- .col-sm -->
  </div><!-- .row -->
</div><!-- .container -->
