<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<%  if form_title(@support) %>
					<h1>Nuevo Soporte</h1>		
			<% end %>			
			<% if @support.errors.any? %>
			  <div class="alert alert-danger">
			    <ul>
			    <% @support.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>			

			<%= form_for @support do |f| %>
				<div class="form-group">
					<%=  f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo del Soporte" %>
				</div>
	   		    <div class="form-group">
				   <%= f.label :category_id %><br />
				   <%= f.collection_select :category_id, Category.order(:title), :id, :title, {prompt: "-- Selecione una Categoria --"}, {class: "form-control"} %>            	
				</div>

	   		    <div class="form-group">
				   <%= f.label :subcategory_id %><br />
				   <%= f.collection_select :subcategory_id, SubCategory.order(:name), :id, :name, {prompt: "-- Selecione una SubCategoria --"}, {class: "form-control"} %>            	
				</div>

				<div class="form-group">
					<%=  f.text_area :description, class: "form-control input-lg", placeholder: "Ingresa la descripciÃ³n del Soporte" %>
				</div>
				<div>
					<%= f.submit form_title(@support), class: "btn btn-primary btn-lg" %> <%= link_to "Cancelar", supports_path, class: "btn btn-primary btn-lg" %>
				</div>	
			<% end %>
		</div>
	</div>
</div>