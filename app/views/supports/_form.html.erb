<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1><%= form_title %></h1>		
			<% if @support.errors.any? %>
			  <div class="alert alert-danger">
			    <ul>
			    <% @support.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>			

			<%= form_for @support do |f| %>
				<div class="form-group">
					<%=  f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo del Soporte" %>
				</div>
                <div  class="form-group" id="country_drop_down_id">
                	<%= f.collection_select :category_id, Category.all, :id, :title, {prompt: "-- Selecione una Categoria --"}, {class: "form-control"} %>
				</div>								
                <div  class="form-group" id="state_drop_down_id">
                	<%= f.collection_select :subcategory_id, SubCategory.all, :id, :name, {prompt: "-- Selecione una Sub-Categoria --"}, {class: "form-control"} %>
				</div>												
				<div class="form-group">
					<%=  f.text_area :description, class: "form-control input-lg", placeholder: "Ingresa la descripciÃ³n del Soporte" %>
				</div>
				<%= f.text_field :subcategory,'', class: "form-control",:style=>"display:none"%>
				<div>
					<%= f.submit form_title, class: "btn btn-primary btn-lg" %> <%= link_to "Cancelar", supports_path, class: "btn btn-primary btn-lg" %>
				</div>	
			<% end %>
		</div>
	</div>
</div>