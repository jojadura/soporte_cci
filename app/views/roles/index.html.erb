<div class="container">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-1">
            <table class="table table-responsive">
                <thead>
                    <th class="col-sm-2"></th>
                    <th class="col-sm-4"></th>
                    <th class="col-sm-6"></th>
                </thead>
                <div id="btn-new">
                    <% if signed_in? %>
                        <%= link_to "Nuevo Rol", new_role_path, class: "btn btn-primary" %>
                    <% else %>
                        <%= link_to "Nuevo Rol", new_user_session_path, class: "btn btn-primary" %>
                    <% end %>               
                </div>          

                <h2>Roles</h2>
                <% @roles.each do |role| %>
                  <tr>
                    <td id="colorName-cat"><h3><%= role.name %>
                    <td class="text-left">
                      <div id="body-categories">
                        <span>Creado por <%= role.user.email %> hace <%= time_ago_in_words role.created_at %> </span>
                      </div>              
                    </td>
                    <td>
                        <% if signed_in? %>
                            <% if current_user.id == role.user.id %>
                                <div id="body-categories">
                                    <%= link_to "<span class='glyphicon glyphicon-pencil'>&nbsp;</span>".html_safe, edit_role_path(role) %>
                                    <%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, role_path(role), method: :delete, data: { confirm: "Â¿Desea eliminar este Rol?" } %>
                                    </div>
                            <% end %>
                        <% end %>                                    
                    </td>
                    </div>
                  </tr>
                <% end %>
              </table>         
        </div> 
    </div> <!-- .row-->
</div> <!-- .container -->