<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<%  if form_title(@subcategory) %>
					<h1>Crear Sub-Categoria</h1>		
			<% end %>
			<% if @subcategory.errors.any? %>
			  <div class="alert alert-danger">
			    <ul>
			    <% @subcategory.errors.full_messages.each do |msg| %>
			      <li><%= msg %></li>
			    <% end %>
			    </ul>
			  </div>
			<% end %>			
			<% if signed_in? %>
				<%= form_for @subcategory do |f| %>
                    <div  class="form-group">
                    	<%= f.collection_select :category_id, Category.all, :id, :title, {prompt: "-- Selecione una Categoria --"}, {class: "form-control"} %>
					</div>				
					<div class="form-group">
						<%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingrese el titulo de la Sub-CategorÃ­a" %>
					</div>
						<%= f.submit form_title(@subcategory), class: "btn btn-primary btn-lg" %> <%= link_to "Cancelar", sub_categories_path, class: "btn btn-primary btn-lg" %>
					</div>	
				<% end %>
			<% end %>
		</div>
	</div>
</div>